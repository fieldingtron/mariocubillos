                  >
                    <stop offset='0%' stop-color='#f9f9f9'></stop>
                    <stop offset='100%' stop-color='#fff'></stop>
                  </linearGradient>
                </defs>
                <path
                  fill='url(#logosWhatsappIcon0)'
